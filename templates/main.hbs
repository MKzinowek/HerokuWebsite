        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" ></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
<link rel="stylesheet" href="../public/css/site.css" <script defer src="/js/main.js">
</script>

<head>
    {{>head}}
    <style>
        body {
            background-image: url("../public/images/ShenandoahWanderersLog.jpg");
        }

        .menuDropdownUl {
            text-align: center;
        }

        ul li {
            display: inline-block;
            margin-right: 15px;
            transition: all 0.3s ease-in-out;
        }

        ul li:hover .submenu {
            height: 85px;
        }

        ul li:hover a {
            color: rgb(20, 141, 105);
        }

        ul li:hover a::before {
            visibility: visible;
            transform: scale(1, 1);
        }

        ul li .submenu {
            overflow: hidden;
            position: absolute;
            left: 0;
            width: 100%;
            background-color: #3862a0;
            height: 0;
            line-height: 40px;
            box-sizing: border-box;
            transition: height 0.3s ease-in-out;
            transition-delay: 0.1s;
        }

        ul li .submenu a {
            color: #fff;
            margin-top: 20px;
            font-size: 16px;
        }

        ul li .submenu a:hover {
            color: #fff;
            text-decoration: underline;
        }

        ul li a {
            color: #999;
            display: block;
            padding: 0 7px 0 7px;
            margin: 0 0 10px;
            text-decoration: none;
            position: relative;
        }

        ul li a::before {
            content: "";
            position: absolute;
            width: 100%;
            height: 3px;
            bottom: -10px;
            left: 0px;
            background-color: #058020;
            transition: all 0.2s ease-in-out;
            transform: scale(0, 0);
            visibility: hidden;
        }
    </style>
</head>

<body>
 
    <nav>
        <ul class="menuDropdownUl">
            <li><a href="#">Home</a></li>
            <li><a href="#">Trips </a></li>
            <li><a href="#">Contact </a></li>
            <li><a href="#">About</a></li>
            <li><a href="#">My Account</a></li>
            <ul class="submenu"></ul>
            <li> <a href="#" id = "viewAccount" class="dropdown-item"> View Account </a> </li>
            <li> <a href="#" id = "deleteAccount" class="dropdown-item"> Delete Account </a> </li>
            <li> <a href="#" id = "logoutAccount" class="dropdown-item"> Logout </a> </li>
        </ul>
    </nav>
    <div id="contentArea">
        <p id = "email"></p>
        <p id = "password"></p>
    </div>
</body>